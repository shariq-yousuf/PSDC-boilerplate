<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Users</title>
  </head>
  <body class="font-sans bg-gray-100">
    <div class="container mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-6">Users</h1>
      <div class="text-center my-6">
        <a
          href="/users/register"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
          >Register New User</a
        >
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% for (const { user } of users) { %>
        <div class="bg-white rounded shadow-md p-4">
          <p class="text-lg font-medium mb-2">Name: <%= user.username %></p>
          <p class="text-gray-600">Email: <%= user.email %></p>
          <p class="text-gray-600">Phone: <%= user.phoneNumber %></p>

          <div class="flex justify-end mt-4">
            <a
              href="/users/<%= user.id %>"
              class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
            >
              Edit
          </a>
            <button
              data-user-id="<%= user.id %>"
              class="delete-btn bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded ml-2"
            >
              Delete
            </button>
          </div>
        </div>

        <% } %>
      </div>
    </div>

    <script>
      const deleteButtons = document.querySelectorAll(".delete-btn")

      const deleteUser = async (userId) => {
        if (confirm("Are you sure you want to delete this user?")) {
          try {
            const res = await fetch(`/users/${userId}`, {
              method: "DELETE",
            })
            console.log(res)
            if (res.redirected) {
              window.location.href = res.url
            }
          } catch (err) {
            console.error("delete user client", err)
          }
        }
      }

      deleteButtons.forEach((button) => {
        button.addEventListener("click", () => {
          const userId = button.dataset.userId
          deleteUser(userId)
        })
      })
    </script>
  </body>
</html>
