<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 p-12">
    <h1 class="text-3xl font-bold text-center text-gray-800">Dashboard</h1>
    <div class="text-center mt-8">
      <a
        href="/users"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >Register New User</a
      >
    </div>

    <ul class="list-none mt-4">
      <% users.forEach((user) => { %>
      <li
        class="flex items-center py-2 px-4 border-b border-gray-200 hover:bg-gray-100"
      >
        <span class="mr-4 text-lg font-medium text-gray-700"
          ><%= user.username %></span
        >
        <a
          href="/users/<%= user.id %>"
          class="text-blue-500 hover:text-blue-700"
          >View</a
        >
      </li>
      <% }) %>
    </ul>
  </body>
</html>
